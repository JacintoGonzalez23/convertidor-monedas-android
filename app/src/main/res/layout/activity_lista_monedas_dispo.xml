                    android:background="#F5F5F5"
                    android:textColor="#474646"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/peso_colombiano"
                    android:background="#F5F5F5"
                    android:textColor="#474646"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:gravity="center"/>
            </TableRow>
            <!-- Fila 7 -->
