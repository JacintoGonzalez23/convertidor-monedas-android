<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el dolar"
        android:inputType="numberDecimal"
        android:padding="48dp"
        android:textSize="28sp"
        android:autofillHints="number"/>


    <Spinner
        android:id="@+id/spinnerFrom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editAmount"
        android:layout_marginTop="48dp"
        android:contentDescription="La monedad base es dolar"
        android:textSize="28sp"/>

    <Spinner
        android:id="@+id/spinnerTo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/spinnerFrom"
        android:contentDescription="Seleccionar moneda de destino"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerTo"
        android:layout_marginTop="48dp"
        android:text="Convertir divisa"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnConvert"
        android:layout_marginTop="48dp"
        android:textSize="20sp"/>

</RelativeLayout>
